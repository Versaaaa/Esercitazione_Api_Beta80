@page
@model FrontEnd.Pages.GestioneFunzionalitaModel
@{
}
<div class="row">
    <div class="col-md-6">
        <h2>
            Banche
        </h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var i in await Model.Banches)
            {
                <tr>
                    <td>@i.nome</td>
                    <td><a href="ModificaBanca?i=@i.id">Modifica</a></td>
                </tr>
            }
        </table>
    </div>
</div>